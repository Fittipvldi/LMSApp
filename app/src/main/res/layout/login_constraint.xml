<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EFF8"
    android:backgroundTintMode="add"
    android:textAlignment="center" >

    <ImageView
        android:id="@+id/imagem_login"
        android:layout_width="193dp"
        android:layout_height="95dp"
        android:layout_marginTop="92dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_bullest_blue" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textColor="#201A6E"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagem_login" />

    <EditText
        android:id="@+id/campo_usuario"
        android:layout_width="330dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#201A6E"
        android:drawableLeft="@android:drawable/sym_action_email"
        android:drawableTint="#201A6E"
        android:ems="10"
        android:foregroundTint="#FFFFFF"
        android:hint="example@gmail.com"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/botao_login"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:background="@color/button_background"
        android:backgroundTint="@color/button_background"
        android:stateListAnimator="@null"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.869"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_password"
        app:layout_constraintVertical_bias="0.69" />

    <EditText
        android:id="@+id/campo_password"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#201A6E"
        android:baselineAligned="false"
        android:contentDescription="Senha"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:drawableTint="#201A6E"
        android:drawableTintMode="src_atop"
        android:drawingCacheQuality="low"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:paddingRight="60dp"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_usuario" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="70dp"
        android:layout_height="47dp"
        android:background="@android:color/transparent"
        android:text="ToggleButton"
        android:textColor="@color/button_background"
        android:textOff="show"
        android:textOn="hide"
        app:layout_constraintEnd_toEndOf="@+id/campo_password"
        app:layout_constraintTop_toTopOf="@+id/campo_password" />

    <ProgressBar
        android:id="@+id/progress_login"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="add"
        android:outlineAmbientShadowColor="@color/button_background"
        android:outlineSpotShadowColor="@color/button_background"
        android:progressBackgroundTint="@color/button_background"
        android:progressTint="@color/button_background"
        android:progressDrawable="@color/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>